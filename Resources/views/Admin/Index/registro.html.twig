{% extends "GemaAdminBundle:Ejemplo:base.html.twig" %}

{% block title %}GemaAdminBundle:Ejemplo\Extra:registro{% endblock %}

{% block subnavbar %}{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/gemaadmin/css/pages/signin.css')}}" rel="stylesheet" />

{% endblock %}
    
{% block body %}


<div class="account-container register stacked">
	
	<div class="content clearfix">
		
		<form action="{{ path('home') }}" method="post" />
		
			<h1>Crea tu cuenta</h1>			
			
			<div class="login-social">
				<p>Loguearme usando una red social:</p>
				
				<div class="twitter">
					<a href="#" class="btn_1">Login with Twitter</a>				
				</div>
				
				<div class="fb">
					<a href="#" class="btn_2">Login with Facebook</a>				
				</div>
			</div>
			
			<div class="login-fields">
				
				<p>Crea tu cuenta gratis:</p>
				
				<div class="field">
					<label for="firstname">Nombre:</label>
					<input type="text" id="firstname" name="firstname" value="" placeholder="Nombre" class="login" />
				</div> <!-- /field -->
				
				<div class="field">
					<label for="lastname">Apellido:</label>	
					<input type="text" id="lastname" name="lastname" value="" placeholder="Apellido" class="login" />
				</div> <!-- /field -->
				
				
				<div class="field">
					<label for="email">Direccion de Correo:</label>
					<input type="text" id="email" name="email" value="" placeholder="Direccion de Correo" class="login" />
				</div> <!-- /field -->
				
				<div class="field">
					<label for="password">Contrase単a:</label>
					<input type="password" id="password" name="password" value="" placeholder="Contrase単a" class="login" />
				</div> <!-- /field -->
				
				<div class="field">
					<label for="confirm_password">Confirmar Contrase単a:</label>
					<input type="password" id="confirm_password" name="confirm_password" value="" placeholder="Confirmar Contrase単a" class="login" />
				</div> <!-- /field -->
				
			</div> <!-- /login-fields -->
			
			<div class="login-actions">
				
				<span class="login-checkbox">
					<input id="Field" name="Field" type="checkbox" class="field login-checkbox" value="First Choice" tabindex="4" />
					<label class="choice" for="Field">I have read and agree with the Terms of Use.</label>
				</span>
									
				<button class="button btn btn-primary btn-large">Registrar</button>
				
			</div> <!-- .actions -->
			
		</form>
		
	</div> <!-- /content -->
	
</div> <!-- /account-container -->


<!-- Text Under Box -->
<div class="login-extra">
	Ya tienes una cuenta? <a href="{{ path('admin_login') }}">Logueate</a>
</div> <!-- /login-extra -->

{% endblock %}

{% block javascripts %}

<script src="{{ asset('bundles/gemaadmin/js/signin.js') }}"></script>

{% endblock %}
