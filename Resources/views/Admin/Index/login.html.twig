{% extends "GemaAdminBundle:Ejemplo:base.html.twig" %}

{% block title %}GemaAdminBundle:Ejemplo\Extra:login{% endblock %}

{% block subnavbar %}{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/gemaadmin/css/pages/signin.css')}}" rel="stylesheet" />

{% endblock %}
    
{% block body %}


<div class="account-container stacked">
	
	<div class="content clearfix">
		
		<form action="{{ path('admin_login_check') }}" method="post" />
		
			<h1>Iniciar Sesion</h1>		
			
			<div class="login-fields">
				
				<p>Ingrese usando su cuenta registrada:</p>
				
				<div class="field">
					<label for="username">Usuario:</label>
                                        
					<input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Usuario" class="login username-field" />
				</div> <!-- /field -->
				
				<div class="field">
					<label for="password">Contraseña:</label>
                                        
					<input type="password" id="password" name="_password" value="" placeholder="Contraseña" class="login password-field" />
				</div> <!-- /password -->
				
			</div> <!-- /login-fields -->
			
			<div class="login-actions">
				
				<span class="login-checkbox">
					<input id="Field" name="Field" type="checkbox" class="field login-checkbox" value="First Choice" tabindex="4" />
					<label class="choice" for="Field">Keep me signed in</label>
				</span>
									
				<button class="button btn btn-warning btn-large">Sign In</button>
				
			</div> <!-- .actions -->
			
			<div class="login-social">
				<p>Sign in using social network:</p>
				
				<div class="twitter">
					<a href="#" class="btn_1">Login with Twitter</a>				
				</div>
				
				<div class="fb">
					<a href="#" class="btn_2">Login with Facebook</a>				
				</div>
			</div>
			
		</form>
		
	</div> <!-- /content -->
	
</div> <!-- /account-container -->


<!-- Text Under Box -->
<div class="login-extra">
	No tienes una cuenta? <a href="{{ path('admin_registro') }}">Registrate</a><br />
	Olvidaste tu <a href="#">Contraseña?</a>
</div> <!-- /login-extra -->
{% endblock %}

{% block javascripts %}

<script src="{{ asset('bundles/gemaadmin/js/signin.js') }}"></script>

{% endblock %}
