{% extends "GemaAdminBundle:Ejemplo:base.html.twig" %}

{% block title %}GemaAdminBundle:Ejemplo\Componentes:notificaciones{% endblock %}

{% block stylesheets %}

<link href="{{ asset('bundles/gemaadmin/js/plugins/msgGrowl/css/msgGrowl.css')}} " rel="stylesheet" />
<link href="{{ asset('bundles/gemaadmin/js/plugins/lightbox/themes/evolution-dark/jquery.lightbox.css')}} " rel="stylesheet" />	
<link href="{{ asset('bundles/gemaadmin/js/plugins/msgbox/jquery.msgbox.css')}} " rel="stylesheet" />	

    <style>
    
    .btn {
    	margin-right: 1em;
    	margin-bottom: 1em;
    }
    
    </style>
{% endblock %}   

{% block body %}

    
<div class="main">

    <div class="container">

     <div class="row">
		
		<div class="span12">		
			
			<div class="widget stacked">
				
				<div class="widget-header">		
					<i class="icon-hand-up"></i>				
					<h3>Alert & Confirm</h3>						
				</div> <!-- /.widget-header -->
				
				<div class="widget-content">
			
			
			<a href="javascript:;" class="btn btn-large btn-info msgbox-alert">Alert Message</a>
			<a href="javascript:;" class="btn btn-large btn-info msgbox-info">Information Message</a>
			<a href="javascript:;" class="btn btn-large btn-info msgbox-error">Error Message</a>
			<a href="javascript:;" class="btn btn-large btn-info msgbox-confirm">Confirm Message</a>
			<a href="javascript:;" class="btn btn-large btn-info msgbox-prompt">Prompt Message</a>
					</div> <!-- /.widget-content -->	
					
				</div> <!-- /.widget -->
			
		</div> <!-- /.span12 -->
		
	</div>
	
	
	
	<div class="row">
		
		<div class="span12">
			
			<div class="widget stacked">
				
				<div class="widget-header">		
					<i class="icon-picture"></i>							
					<h3>Lightbox</h3>						
				</div> <!-- /.widget-header -->
				
				<div class="widget-content">
			
			
					<a href="{{ asset('bundles/gemaadmin/img/lightbox/4.jpg') }}" class="btn btn-large btn-warning lightbox-type">Show Image Lightbox</a>							
					<a href="http://www.youtube.com/watch?v=TsUD1za9TA4" class="btn btn-large btn-warning lightbox-type">Show Video</a>						
					<a href="http://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=+paris+eiffel&amp;ie=UTF8&amp;hq=eiffel&amp;hnear=Paris,+Ile-de-France,+France&amp;ll=48.855708,2.300434&amp;spn=0.013243,0.042272&amp;z=15&amp;lightbox[width]=610&amp;lightbox[height]=360" class="btn btn-large btn-warning lightbox-type">Show Maps</a>
					</div> <!-- /.widget-content -->	
					
				</div> <!-- /.widget -->
				
		</div> <!-- /.span12 -->
		
	</div>
	
	
	<div class="row">
		
		<div class="span12">
			
			<div class="widget stacked">
				
				<div class="widget-header">		
					<i class="icon-credit-card"></i>							
					<h3>Growl Message</h3>						
				</div> <!-- /.widget-header -->
				
				<div class="widget-content">						
					<button class="btn btn-large btn-inverse growl-type" data-type="info">Show Info Growl</button>							
					<button class="btn btn-large btn-inverse growl-type" data-type="success">Show Success Growl</button>							
					<button class="btn btn-large btn-inverse growl-type" data-type="warning">Show Warning Growl</button>							
					<button class="btn btn-large btn-inverse growl-type" data-type="error">Show Error Growl</button>

			<div class="clear"></div>
					</div> <!-- /.widget-content -->	
					
				</div> <!-- /.widget -->
			
		</div> <!-- /.span12 -->
		
	</div> <!-- /.row -->

    </div> <!-- /container -->
    
</div> <!-- /main -->
    

{% endblock %}

{% block javascripts %}


<script src="{{ asset('bundles/gemaadmin/js/plugins/msgGrowl/js/msgGrowl.js') }}"></script>
<script src="{{ asset('bundles/gemaadmin/js/plugins/lightbox/jquery.lightbox.min.js') }}"></script>
<script src="{{ asset('bundles/gemaadmin/js/plugins/msgbox/jquery.msgbox.min.js') }}"></script>


<script src="{{ asset('bundles/gemaadmin/js/demo/notifications.js') }}"></script>

{% endblock %}

     